<!DOCTYPE html>
<html>
  <head>
    <title>Pimienta & sal</title>
    <link rel="stylesheet" href="/css/style.css" />
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
  </head>
  <body>
    <%- include('./partials/header') %> 

    <!-- Page content -->
    <div class="ps-content">
      <!-- About Section -->
      <%- include('./partials/about') %> 

      <hr />
      <!-- Menu Section -->
      <div class="ps-row ps-padding-64" id="menu">
        <div class="ps-col l6 ps-padding-large">
          <h1 class="ps-center">Nuestro Menu</h1>
          <br />
            <% platos.forEach(plato => { %>
              <a href="/detalle/<%= plato.id %>" style="text-decoration: none;"><h4><%= plato.nombre %>  </h4>
              <p class="ps-text-grey">
                <%= plato.description %>  U$<%= plato.precio %> 
              </p></a>
              <br />
            <% }) %>
        </div>

        <div class="ps-col l6 ps-padding-large ps-img-menu">
          <img
            src="/images/menu.jpg"
            class="ps-round ps-image ps-opacity-min"
            alt="Menu"
          />
        </div>
      </div>

      <%- include('./partials/footer') %> 
    </div>
  </body>
</html>
